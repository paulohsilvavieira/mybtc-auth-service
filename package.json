{
  "name": "api-my-bitcoin",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "docker": "docker-compose up -d api_my_bitcoin_dev --no-recreate && docker exec -it api_my_bitcoin_dev /bin/sh",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug 0.0.0.0:9330  --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests  --runInBand --no-cache",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm test -- --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "test:staged": "npm test -- --findRelatedTests --passWithNoTests",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:create": "npm run typeorm:cli -- migration:create ./src/database/migrations/$npm_config_name",
    "migration:run": "npm run typeorm:cli -- migration:run -d ./typeorm-config.ts",
    "migration:revert": "npm run typeorm:cli -- migration:revert -d ./typeorm-config.ts",
    "entity:create": "npm run typeorm:cli -- entity:create src/database/entities/$npm_config_name && node typeorm-cli.js $npm_config_name"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "aws-lambda": "^1.0.7",
    "aws-serverless-express": "^3.4.0",
    "bcrypt": "^5.1.0",
    "nest-winston": "^1.9.3",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.16",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@swc/jest": "^0.2.26",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "esbuild": "^0.18.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "jest-mock-extended": "^3.0.4",
    "lint-staged": "^13.2.2",
    "pg-mem": "^1.8.6",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testTimeout": 15000,
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/protocols/**",
      "!**/*.module.(t|j)s",
      "!**/migrations/**",
      "!**/entities/**",
      "!**/main.ts",
      "!**/index.ts",
      "!**/*.config.ts"
    ],
    "moduleNameMapper": {
      "@tests/(.*)": "<rootDir>/../test/$1",
      "@auth/(.*)": "<rootDir>/auth/$1",
      "@repository/(.*)": "<rootDir>/database/repositories/$1",
      "@entities/(.*)": "<rootDir>/database/entities/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
